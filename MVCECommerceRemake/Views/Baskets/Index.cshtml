@model MVCECommerceRemake.Models.BasketViewModel

@{
    ViewData["Title"] = "Basket";
}

<h2>Basket</h2>


@if (Model.baskets != null)
{
    foreach (var item in Model.baskets)
    {
        <div class="container">
            <div class="layout-products">
                <br />
                @item.ProductId
                @item.Quantity
                <br />
                <!-- placeholder for add to basket <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> | -->
                <!--<a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                placeholder for remove from basket <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a> -->
            </div>
        </div>
    }
}

else
{
    <div class="body-content">
        <p class="text-center">There are no items to display, please add soem to the basket first or sign in if you haven't already.</p>
    </div>

}


